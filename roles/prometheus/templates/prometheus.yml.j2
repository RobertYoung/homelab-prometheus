global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}

rule_files:
  # - "first_rules.yml"
  # - "second_rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'go-ethereum'
    static_configs:
      - targets: ['10.0.20.10:6060']
        labels:
          chain: ethereum
    metrics_path: /debug/metrics/prometheus
    scrape_interval: 30s
    scrape_timeout: 10s

  - job_name: 'beacon node'
    static_configs:
      - targets: ['10.0.20.10:8080']
    metrics_path: /metrics
    scrape_interval: 30s
    scrape_timeout: 10s

  - job_name: 'validator'
    static_configs:
      - targets: ['10.0.20.10:8081']